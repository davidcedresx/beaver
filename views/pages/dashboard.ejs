<div class="container">
	<h1 class="display-4 mb-4">Hi, <%= me.name %></h1>
	
	<h4>My Persons</h4>

	<div class="row">

		<% for (var i in users) { %>
			<div class="col-md-3">
				<div class="card mb-4">
					<div class="card-body">
						<h5 class="card-title">
							<%= users[i].name %>

							<% if (users[i].isAdmin) { %>
								<span class="badge badge-info">
									Admin
								</span>
							<% } %>
						</h5>
						<p>
							<%= users[i].email %>
						</p>
						
					</div>
				</div>
			</div>
		<% } %>

		<% if (users.length === 0) { %>
			<div class="col">
				<p class="text-secondary">It looks like you have no users yet, try adding one </p>
			</div>
		<% } %>
	</div>

	<hr />

	<h4>My websites</h4>

	<div class="row">
		<% for (var i in websites) { %>
			<div class="col-md-3">
				<div class="card mb-4">
					<div class="card-body">
						<h5 class="card-title">
							<%= websites[i].domain %>
						</h5>
						<p><%= websites[i].state %></p>
						<!-- <a href="/websites/<%=websites[i].id%>" class="btn btn-primary">Details</a> -->
					</div>
				</div>
			</div>
		<% } %>

		<% if (websites.length === 0) { %>
			<div class="col">
				<p class="text-secondary">You have no websites to take care of</p>
			</div>
		<% } %>
	</div>


	<hr />

	<h4>Get website</h4>

	<form action="/websites/get" method="POST">
		<div class="form-row">
			<div class="col">
				<div class="form-group">
					<input class="form-control" type="text" name="domain" placeholder="Website URL" />
				</div>
			</div>
			<div class="col-auto">
				<div class="form-group">
					<button class="btn btn-dark" type="submit">Get</button>
				</div>
			</div>
		</div>
		
	</form>


	<h4>Change state</h4>

	<form action="/websites/changeStatus" method="POST">
		<div class="form-row">
			<div class="col">
				<div class="form-group">
					<input class="form-control" type="text" name="domain" placeholder="Website URL" />
				</div>
			</div>
			<div class="col-auto">
				<div class="form-group">
					<button class="btn btn-dark" type="submit">Change state</button>
				</div>
			</div>
		</div>
		
	</form>
	
	<a href="/users/new" class="btn mb-4 btn-primary">Create account</a>
	<a href="/websites/new" class="btn mb-4 btn-info">Create website</a>
	<a href="/requests" class="btn mb-4 btn-warning">Update website</a>

</div>